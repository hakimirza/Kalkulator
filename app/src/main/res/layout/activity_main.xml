<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.fortieg.kaddafi.kalkulator.MainActivity"
    android:orientation="vertical"
    android:weightSum="5">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="0"
            android:id="@+id/hasil"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical|right"
            android:textSize="24dp"
            android:background="@color/colorAccent"
            android:textColor="#ffffff"
            android:padding="10dp"
            android:singleLine="true"
            android:layout_weight="1" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:weightSum="4" >

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="7"
            android:id="@+id/btn7"
            android:layout_weight="1"
            android:textSize="20dp"
            android:onClick="btn7Clicked" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="8"
            android:id="@+id/btn8"
            android:layout_weight="1"
            android:textSize="20dp"
            android:onClick="btn8Clicked" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="9"
            android:id="@+id/btn9"
            android:layout_weight="1"
            android:textSize="20dp"
            android:onClick="btn9Clicked" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="C"
            android:id="@+id/btn_clear"
            android:layout_weight="1"
            android:textSize="20dp"
            android:onClick="btnclearClicked" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:weightSum="4" >

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="4"
            android:id="@+id/btn4"
            android:layout_weight="1"
            android:textSize="20dp"
            android:onClick="btn4Clicked" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="5"
            android:id="@+id/btn5"
            android:layout_weight="1"
            android:textSize="20dp"
            android:onClick="btn5Clicked" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="6"
            android:id="@+id/btn6"
            android:layout_weight="1"
            android:textSize="20dp"
            android:onClick="btn6Clicked" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="+"
            android:id="@+id/btn_tambah"
            android:layout_weight="1"
            android:textSize="20dp"
            android:onClick="btnplusClicked" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:weightSum="4">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="1"
            android:id="@+id/btn1"
            android:layout_weight="1"
            android:textSize="20dp"
            android:onClick="btn1Clicked" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="2"
            android:id="@+id/btn2"
            android:layout_weight="1"
            android:textSize="20dp"
            android:onClick="btn2Clicked" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="3"
            android:id="@+id/btn3"
            android:layout_weight="1"
            android:textSize="20dp"
            android:onClick="btn3Clicked" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="-"
            android:id="@+id/btn_kurang"
            android:layout_weight="1"
            android:textSize="20dp"
            android:onClick="btnminusClicked" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:weightSum="4" >

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="H"
            android:id="@+id/btn_h"
            android:layout_weight="1"
            android:textSize="20dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="="
            android:id="@+id/btn_equal"
            android:layout_weight="1"
            android:textSize="20dp"
            android:onClick="btnequalClicked" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="/"
            android:id="@+id/btn_bagi"
            android:layout_weight="1"
            android:textSize="20dp"
            android:onClick="btndivideClicked" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="X"
            android:id="@+id/btn_kali"
            android:layout_weight="1"
            android:textSize="20dp"
            android:onClick="btnmultiClicked" />
    </LinearLayout>

</LinearLayout>
